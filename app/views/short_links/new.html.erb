<% content_for :javascript do %>
  <script type='text/javascript'>
    jQuery(document).ready(function() {
      redirector.setup();
    });
  </script>
<% end %>

<%= link_to('Create Short Link', '/short-links/new') %>
<%= link_to('Reports', '/reports', style: 'margin-left: 30px;') %>

<%= form_tag('/api/short-links', { id: 'new-short-link-form' }) do %>
  <p>
    <%= label_tag(:email, 'Email:') %>
    <%= text_field_tag(:email, '', size: 49) %>
  </p>
  <p>
    <%= label_tag(:original_url, 'URL:') %>
    <%= text_field_tag(:original_url, '', size: 50) %>
  </p>
  <%= submit_tag('Create Link') %>
<% end %>

<div id='result-container'>
</div>
